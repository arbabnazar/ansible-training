# Change the permission and ownership of /home/vagrant/.ssh/id_rsa
chown vagrant. /home/vagrant/.ssh/id_rsa
chmod 0400 /home/vagrant/.ssh/id_rsa

# Copy config file to avoid StrictHostKeyChecking
cat << CON > /home/vagrant/.ssh/config
Host *
    ServerAliveInterval 60
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
CON


# Empty the buffers and cache
echo 1 > /proc/sys/vm/drop_caches
echo 2 > /proc/sys/vm/drop_caches
echo 3 > /proc/sys/vm/drop_caches

# Change directory automatically on ssh login
if ! grep -qF "cd /home/vagrant/ansible" /home/vagrant/.bashrc ; then echo "cd /home/vagrant/ansible" >> /home/vagrant/.bashrc ; fi
chown vagrant. /home/vagrant/.bashrc

